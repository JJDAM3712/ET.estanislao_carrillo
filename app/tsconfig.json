{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "./dist",    // Archivos compilados
        "rootDir": "./src"     // Archivos fuente
    },
    "include": [
        "src/**/*" // Busca archivos en la carpeta src y subdirectorios
    ],
    "exclude": [
        "dist",    // Excluye archivos de salida
        "node_modules" // Excluye dependencias
    ]
}